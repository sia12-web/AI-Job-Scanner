# Telegram API Credentials
# Get these from https://my.telegram.org/apps
TG_API_ID=your_api_id_here
TG_API_HASH=your_api_hash_here

# Telegram Account
TG_PHONE=+1234567890
TG_2FA_PASSWORD=your_two_factor_password_if_enabled

# Session Storage
TG_SESSION_DIR=./data/telegram_session

# SMTP Configuration (for auto-apply)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Auto-Apply Kill Switch (CRITICAL)
APPLY_ENABLED=false  # MUST be "true" to send emails

# Rate Limiting
APPLY_SLEEP_SECONDS=5  # Delay between sends
APPLY_MAX_PER_RUN=10   # Max emails per run
